import { useEffect, useState } from "react"
import { supabase, AgendamentoLaboratorio } from "../lib/supabase"

export default function DashboardNovo() {
  const [agendamentos, setAgendamentos] = useState<AgendamentoLaboratorio[]>([])
  const [loading, setLoading] = useState(true)
  const [filtro, setFiltro] = useState('')

  useEffect(() => {
    fetchAgendamentos()
  }, [])

  async function fetchAgendamentos() {
    try {
      const { data, error } = await supabase
        .from('agendamentos_laboratorio')
        .select('*')
        .order('created_at', { ascending: false })
      
      if (error) throw error
      setAgendamentos(data || [])
    } catch (error) {
      console.error('Erro ao buscar agendamentos:', error)
    } finally {
      setLoading(false)
    }
  }

  async function handleDelete(id: string) {
    if (!confirm('Deseja realmente excluir este agendamento?')) return

    try {
      const { error } = await supabase
        .from('agendamentos_laboratorio')
        .delete()
        .eq('id', id)

      if (error) throw error
      
      alert('Agendamento excluído com sucesso!')
      fetchAgendamentos()
    } catch (error) {
      console.error('Erro ao excluir:', error)
      alert('Erro ao excluir agendamento')
    }
  }

  const agendamentosFiltrados = agendamentos.filter(a => {
    const termo = filtro.toLowerCase()
    return (
      a.professor_id.toLowerCase().includes(termo) ||
      a.disciplina_id.toLowerCase().includes(termo) ||
      a.laboratorio_id.toLowerCase().includes(termo)
    )
  })

  if (loading) {
    return (
      <div className="flex items-center justify-center min-h-screen">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-indigo-600 mx-auto"></div>
          <p className="mt-4 text-gray-600">Carregando agendamentos...</p>
        </div>
      </div>
    )
  }

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-8 px-4">
      <div className="max-w-7xl mx-auto">
        <div className="bg-white rounded-2xl shadow-2xl overflow-hidden">
          {/* Header */}
          <div className="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-6">
            <h1 className="text-3xl font-bold text-white">
              Dashboard de Agendamentos
            </h1>
            <p className="text-indigo-100 mt-2">
              Visualize e gerencie todos os agendamentos de laboratório
            </p>
          </div>

          <div className="p-8">
            {/* Filtro e Stats */}
            <div className="mb-6 flex flex-col sm:flex-row gap-4 justify-between items-center">
              <div className="flex-1 w-full sm:max-w-md">
                <input
                  type="text"
                  placeholder="Buscar por professor, disciplina ou laboratório..."
                  value={filtro}
                  onChange={e => setFiltro(e.target.value)}
                  className="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
                />
              </div>
              <div className="flex gap-4">
                <div className="bg-indigo-100 px-6 py-3 rounded-lg">
                  <p className="text-sm text-indigo-600 font-semibold">Total</p>
                  <p className="text-2xl font-bold text-indigo-900">{agendamentosFiltrados.length}</p>
                </div>
                <button
                  onClick={fetchAgendamentos}
                  className="px-4 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition"
                  title="Atualizar"
                >
                  <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                </button>
              </div>
            </div>

            {/* Lista de Agendamentos */}
            {agendamentosFiltrados.length === 0 ? (
              <div className="text-center py-12">
                <svg className="w-16 h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <p className="mt-4 text-gray-600">Nenhum agendamento encontrado</p>
              </div>
            ) : (
              <div className="space-y-4">
                {agendamentosFiltrados.map((agendamento) => (
                  <div
                    key={agendamento.id}
                    className="border border-gray-200 rounded-xl p-6 hover:shadow-lg transition-shadow bg-white"
                  >
                    <div className="flex flex-col lg:flex-row lg:items-start justify-between gap-4">
                      {/* Info Principal */}
                      <div className="flex-1 space-y-3">
                        <div className="flex flex-wrap items-center gap-3">
                          <h3 className="text-xl font-bold text-gray-800">
                            {agendamento.disciplina_id}
                          </h3>
                          <span className="px-3 py-1 bg-indigo-100 text-indigo-800 rounded-full text-sm font-semibold">
                            {agendamento.laboratorio_id}
                          </span>
                          <span className={`px-3 py-1 rounded-full text-sm font-semibold ${
                            agendamento.turno === 'Matutino' ? 'bg-yellow-100 text-yellow-800' :
                            agendamento.turno === 'Vespertino' ? 'bg-orange-100 text-orange-800' :
                            'bg-purple-100 text-purple-800'
                          }`}>
                            {agendamento.turno}
                          </span>
                        </div>

                        <div className="grid grid-cols-1 md:grid-cols-2 gap-3 text-sm">
                          <div className="flex items-center text-gray-600">
                            <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            <span className="font-semibold mr-1">Professor:</span>
                            {agendamento.professor_id}
                          </div>

                          <div className="flex items-center text-gray-600">
                            <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                            </svg>
                            <span className="font-semibold mr-1">Alunos:</span>
                            {agendamento.quantidade_alunos}
                          </div>

                          {agendamento.email_contato && (
                            <div className="flex items-center text-gray-600">
                              <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                              </svg>
                              {agendamento.email_contato}
                            </div>
                          )}

                          {agendamento.telefone && (
                            <div className="flex items-center text-gray-600">
                              <svg className="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                              </svg>
                              {agendamento.telefone}
                            </div>
                          )}
                        </div>

                        {/* Datas */}
                        <div className="mt-3">
                          <p className="text-xs font-semibold text-gray-500 mb-2">DATAS AGENDADAS:</p>
                          <div className="flex flex-wrap gap-2">
                            {agendamento.datas_selecionadas?.map((data, idx) => (
                              <span key={idx} className="px-2 py-1 bg-gray-100 text-gray-700 rounded text-xs font-medium">
                                {new Date(data + 'T00:00:00').toLocaleDateString('pt-BR')}
                              </span>
                            ))}
                          </div>
                        </div>

                        {/* Detalhes Técnicos */}
                        {(agendamento.software_utilizado || agendamento.pratica_realizada) && (
                          <div className="mt-3 pt-3 border-t border-gray-200">
                            {agendamento.pratica_realizada && (
                              <p className="text-sm text-gray-600 mb-2">
                                <span className="font-semibold">Prática:</span> {agendamento.pratica_realizada}
                              </p>
                            )}
                            {agendamento.software_utilizado && (
                              <p className="text-sm text-gray-600">
                                <span className="font-semibold">Software:</span> {agendamento.software_utilizado}
                              </p>
                            )}
                          </div>
                        )}

                        {/* Badges */}
                        <div className="flex flex-wrap gap-2 mt-3">
                          {agendamento.necessita_internet && (
                            <span className="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-medium">
                              Internet necessária
                            </span>
                          )}
                          {agendamento.uso_kit_multimidia && (
                            <span className="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs font-medium">
                              Kit Multimídia
                            </span>
                          )}
                        </div>

                        {agendamento.observacao && (
                          <div className="mt-3 p-3 bg-gray-50 rounded-lg">
                            <p className="text-xs font-semibold text-gray-500 mb-1">OBSERVAÇÕES:</p>
                            <p className="text-sm text-gray-700">{agendamento.observacao}</p>
                          </div>
                        )}
                      </div>

                      {/* Ações */}
                      <div className="flex lg:flex-col gap-2">
                        <button
                          onClick={() => agendamento.id && handleDelete(agendamento.id)}
                          className="px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition font-semibold text-sm"
                        >
                          Excluir
                        </button>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  )
}
